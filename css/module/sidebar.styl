.m-sidebar {
    z-index: 20;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	position: absolute;
	top: 0;
	left: -100px;
	background: $bg-sidebar url('../media/design/right-shadow.png') repeat-y 100% 0;
	width: 100px;
	height: 100%;
	transition-duration: 0.25s;
    
    &.m-sidebar--private-active:before { bottom: auto; top: 30px; }
    &.m-sidebar--links-active:before { bottom: 245px; }
    &.m-sidebar--search-active:before { bottom: 145px; }
    &.m-sidebar--settings-active:before { bottom: 45px; }
	
	@media $medium {
		left: 0;
	}
    
    &:before {
        content: "";
        position: absolute;
        right: 0;
        border-style: solid;
        border-width: 10px 14px 10px 0;
        border-color: transparent #ffffff transparent transparent;
        width: 0;
        height: 0;
        transition-duration: 0.25s;
    }
}

.m-sidebar__item {
    opacity: 0.30;
	width: 100px;
	height: 100px;
	
	p {
		margin: 10px 0;
	    text-align: center;
	    font-size: 1.6rem;
	    color: white;
	}
    
    &.is-active {
        opacity: 1;
    }
}

.m-sidebar__item--top {
	position: absolute;
	top: 0;
	
	p {
		font-size: 1.4rem;
	}
}

.m-sidebar__svg-wrapper {
    display: block;
	width: 100px;
	height: 50px;
	
	svg {
		fill: white;
	}
}
