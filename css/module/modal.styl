.m-modal {
    z-index: 30;
}

modal, .m-modal, .m-modal__overlay, .m-modal__wrapper {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}

.m-modal__overlay {
	background: rgba(0, 0, 0, 0.3);
}

.m-modal__wrapper {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.m-modal__container {
    position: relative;
    border-radius: 3px;
    box-shadow: 4px 4px 10px -4px rgba(0, 0, 0, 0.5);
	background: white;
	width: 450px;
	min-height: 200px;
	
	.o-button--close {
		position: absolute;
		top: 0;
		right: 0;
		
		svg {
			fill: #5d5d5d;
		}
	}
}

.m-modal__title {
	margin: 0;
    padding: 25px 0;
	border-bottom: 1px solid #ddd;
	text-align: center;
	font-weight: 400;
	font-size: 2.5rem;
	color: #5d5d5d;
}

.m-modal__body {
	
}

.m-modal__content {
    padding: 20px 30px;
	
	p {
		text-align: center;
		line-height: 30px;
		font-size: 2.0rem;
		color: #5d5d5d;
	}
}

.m-modal__form {
	text-align: center;
    padding: 30px 50px;
	
	.m-login__input input { text-align: center; }
}

.m-modal__vote {
    padding: 40px 0;
	clear: both;
	overflow: hidden;
    text-align: center;
	
	.m-search-result__icon-vote {
		margin: 0 5px;
		width: 50px;
		height: 50px;
	    float: right;
	}
}

.m-modal__vote-wrapper {
	display: inline-block;
	
	> .m-search-result__icon-vote:hover > svg,
	> .m-search-result__icon-vote:hover ~ .m-search-result__icon-vote > svg {
		fill: $color5;
	}
}

.m-modal__footer {
	padding: 0px 0 20px 0;
	text-align: center;
}

.m-modal__button {
	padding: 10px;
	margin: 0 10px;
	min-width: 90px;
	width: auto;
	height: auto;
	text-transform: uppercase;
	text-align: center;
	font-size: 1.6rem;
	color: #5d5d5d;
}
