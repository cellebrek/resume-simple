a,
button,
.o-button,
.o-button--custom,
.o-button--like,
.o-button--close {
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    cursor: pointer;
}

.o-button,
.o-button--custom,
.o-button--close {
    display: inline-block;

    &:active {
        opacity: 0.5;
        transform: translateY(1px);
    }
}

.o-button--like {
    
    &:active {
        svg {
            opacity: 0.5;
            transform: translateY(1px);
        }
    }
}

.o-button {
    display: inline-block;
    border-radius: 4px;
    border: 1px solid #ddd;
    background: white;
    width: 40px;
    height: 40px;
}

.o-button--close {
    position: relative;
    width: 50px;
    height: 50px;
    cursor: pointer;
}
