* {
    box-sizing: border-box;
    -webkit-overflow-scrolling: touch;

    &:focus {
        outline: none;
    }
}

html,
body {
    height: 100%;
}

html {
    font-size: 62.5%;
}

body {
    overflow: hidden;
    margin: 0;
    background: #eee;
    font-family: 'Hero', sans-serif;
    font-size: 16px;
    color: #2f2f2f;
}

main {
    position: relative;
    width: 100%
    height: 100%;
}

a {
    padding: 0px 2px;
    background-color: #ECECEC;
    text-decoration: none;
    color: inherit;
    font-weight: 700;
}

svg {
    width: 100%;
    height: 100%;
}
