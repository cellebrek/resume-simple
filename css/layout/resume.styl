.l-resume {
	padding: 20px;
	text-align: center;
}

.l-resume__wrapper {
	position: relative;
    display: inline-block;
    padding: 45px 30px 20px 30px;
	box-shadow: 2px 2px 20px -10px rgba(0,0,0,0.5);
    background: white;
	width: 100%;
    max-width: 1000px;
    text-align: left;

	@media $medium {
	    padding: 140px 40px 20px 40px;
		width: auto;
		min-width: 1000px;
	}
}

.l-resume__title {
	position: relative;
	padding-right: 20px;

	&:before {
		content: "/";
	    position: absolute;
		top: 32px;
	    right: -10px;
	    line-height: 0;
	    font-weight: 700;
	    font-size: 6.5rem;

		@media $medium {
			top: 26px;
			right: auto;
		    left: -40px;
		}
	}

	@media $medium {
	    position: absolute;
		right: 30px;
	    top: 40px;
	}

	h1 {
		margin: 0;
	    line-height: 35px;
		font-size: 4rem;
	    font-weight: 700;
	}

	h2 {
	    margin: 0;
	    text-transform: uppercase;
		font-weight: 200;
	    font-size: 2.36rem;
	}
}

.l-resume__category {
    padding: 20px 0;
    font-size: 0;

	h3 {
        margin: 0 0 10px -2px;
		text-align: left;
		font-weight: 700;
	    font-size: 1.5rem;

		@media $medium {
			text-align: right;
		}
	}
}

.l-resume__category-list, .l-resume__detail-list {
	display: block;
	vertical-align: top;
	padding: 0;
    margin: 0;
    list-style: none;

	li {
		position: relative;
		font-size: 1.6rem;
	}

	@media $medium {
		display: inline-block;
	}
}

.l-resume__category-list {
    padding-right: 8px;
    width: 25%;
    text-align: right;

	> li {
		display: none;
		font-weight: 300;
	    color: #575757;

		@media $medium {
			display: block;
		}
	}
}

.l-resume__detail-list {
    border-left: 2px solid #ddd;
    padding-left: 8px;
	width: 100%;

	@media $medium {
		width: 75%;
	}

	> h3 {
		display: none;

		@media $medium {
			display: block;
		}
	}

	h3 {
		visibility: hidden;
	}

	li {
        margin: 10px 0;

		&:last-child {
			margin-bottom: 0;
		}

		&:first-child {
			@media $medium { margin-top: 25px; }
		}

		h3 {
		    display: none;

			@media $medium {
				display: block;
			}
		}

		p {
            margin: 4px 0;

			strong {
			    font-weight: 700;
			}
		}
	}
}

.l-resume__bullet:before {
	content:""
	width: 8px;
	height: 8px;
	background: #ddd;
	position: absolute;
	margin-left: -13px;
	margin-top: 5px;
	border-radius: 100%;
}

.l-resume__detail-list--personal {
	li {
		margin: 0;
	}
}

.l-resume__detail-list--small {
	li {
		margin: 5px 0;
	}
}

.l-resume__date {
    margin: 20px 0 5px 0;
    font-weight: 400;
	font-size: 1.6rem;

	&:before {
	    content: "";
	    width: 8px;
	    height: 8px;
	    background: #ddd;
	    position: absolute;
	    margin-left: -13px;
	    margin-top: 5px;
	    border-radius: 100%;
	}
}

.l-resume__float-detail {
	display: none;
	position: absolute;
	left: -220px;
	text-align: right;
	width: 200px;
	font-weight: 300;
	color: #575757;

	@media $medium {
		display: block;
	}
}
